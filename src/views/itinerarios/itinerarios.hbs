                        <form class="form" role="form" autocomplete="off" action="/itinerarios/visual" method="POST">
                            <div class="my-auto row-sm-4 p-1">
                                <select name="daySelected" class="custom-select">
                                    <option selected disabled value="0" style="display:none;">DÃ­a
