<script>
    function ajaxAltaProd() {
        $.ajax({
            method: "POST",
            url: "/productos/alta",
        })
            .done(function () {
                ajaxModProd();
            })
            .fail(function (jqXHR, textStatus, errorThrown) {
                alert(
                    "Ha ocurrido un error y no se ha podido dar de alta los productos nuevos"
                );
                if (jqXHR.status === 0) {
                    alert("No hay conexion a internet, verifique su conexion");
                } else if (jqXHR.status == 404) {
                    alert("La funcion solicitada no existe en el servidor");
                } else if (jqXHR.status == 500) {
                    alert("Ha ocurrido un problema interno en el servidor");
                } else if (textStatus === "parsererror") {
                    alert("La informacion solicitada falló");
                } else if (textStatus === "timeout") {
                    alert("Se ha excedido el tiempo maximo de espera");
                } else if (textStatus === "abort") {
                    alert("Se ha abortado la peticion al servidor");
                } else {
                    alert("Error desconocido: " + jqXHR.responseText);
                }
            })
    };
    function ajaxModProd() {
        $.ajax({
            method: "POST",
            url: "/productos/modificar",
        })
            .done(function () {
                alert("Los productos fueron cargados con exitos");
            })
            .fail(function (jqXHR, textStatus, errorThrown) {
                alert(
                    "Ha ocurrido un error y no se ha podido actualizar los productos"
                );
                if (jqXHR.status === 0) {
                    alert("No hay conexion a internet, verifique su conexion");
                } else if (jqXHR.status == 404) {
                    alert("La funcion solicitada no existe en el servidor");
                } else if (jqXHR.status == 500) {
                    alert("Ha ocurrido un problema interno en el servidor");
                } else if (textStatus === "parsererror") {
                    alert("La informacion solicitada falló");
                } else if (textStatus === "timeout") {
                    alert("Se ha excedido el tiempo maximo de espera");
                } else if (textStatus === "abort") {
                    alert("Se ha abortado la peticion al servidor");
                } else {
                    alert("Error desconocido: " + jqXHR.responseText);
                }
            })
    }

</script>