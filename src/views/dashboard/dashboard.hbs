<div class="container py-1">
    <div class="mx-auto w-auto">
        <div class="card">
            <div class="card-body">
                <button onclick="window.location.href='/clientes'" type="button"
                    class="btn btn-secondary btn-lg btn-block py-0 mx-auto col-sm-10 text-left"><img class="iconImg"
                        src="img/Icons-11.png"> Clientes </button>
                <button onclick="window.location.href='/itinerarios'" type="button"
                    class="btn btn-secondary btn-lg btn-block py-0 mx-auto col-sm-10 text-left"><img class="iconImg"
                        src="img/Icons-12.png"> Repartos </button>
                <button onclick="window.location.href='/ventas'" type="button"
                    class="btn btn-secondary btn-lg btn-block py-0 mx-auto col-sm-10 text-left"><img class="iconImg"
                        src="img/Icons-21.png"> Ventas </button>
                <button onclick="window.location.href='/productos/modificar'" type="button"
                    class="btn btn-secondary btn-lg btn-block py-0 mx-auto col-sm-10 text-left"><img class="iconImg"
                        src="img/Icons-13.png"> Modificar Productos </button>
            </div>
        </div>
    </div>
